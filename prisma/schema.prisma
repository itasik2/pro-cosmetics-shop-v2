generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  brand       String
  description String
  price       Int
  image       String
  category    String
  stock       Int      @default(0)
  isPopular   Boolean  @default(false) // ← добавили
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Order {
  id          String   @id @default(cuid())
  userEmail   String
  totalAmount Int
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  category  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id          String   @id @default("default")
  siteName    String   @default("pro.cosmetics")
  heroTitle   String   @default("Профессиональная косметика для ухода за кожей")
  heroSubtitle String  @default("Подбираем эффективные средства для домашнего ухода.")
  heroImage   String?  @default("/seed/serum.jpg")
  footerText  String   @default("Интернет-магазин профессиональной косметики")
  phone       String?  @default("+7")
  email       String?  @default("sales@vita-services.com")
  updatedAt   DateTime @updatedAt
}

