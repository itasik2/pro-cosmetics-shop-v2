generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products  Product[]
}

model Product {
  id          String   @id @default(cuid())
  name        String

  brandId     String?
  brand       Brand?   @relation(fields: [brandId], references: [id])

  description String
  price       Int
  image       String
  category    String
  stock       Int      @default(0)
  
  isPopular   Boolean  @default(false)
  isNew Boolean @default(false)

  variants    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum OrderStatus {
  NEW
  CONFIRMED
  PACKING
  SHIPPED
  DONE
  CANCELED
}

model Order {
  id           String      @id @default(cuid())

  // Публичный номер (для клиента/админки)
  orderNumber  String      @unique

  customerName String
  phone        String
  email        String?
  deliveryType String      // "pickup" | "delivery" (MVP строкой, чтобы не ломать миграции)
  address      String?
  comment      String?

  currency     String      @default("KZT")
  totalAmount  Int

  status       OrderStatus @default(NEW)

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  items        OrderItem[]
}

model OrderItem {
  id           String   @id @default(cuid())
  orderId      String
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId    String
  variantId    String?  // если base — null

  title        String   // snapshot названия (и варианта)
  unitPrice    Int      // snapshot цены (тенге)
  qty          Int
  lineTotal    Int

  image        String?
  sku          String?

  createdAt    DateTime @default(now())
}


model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  category  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id          String   @id @default("default")
  siteName    String   @default("pro.cosmetics")
  heroTitle   String   @default("Профессиональная косметика для ухода за кожей")
  heroSubtitle String  @default("Подбираем эффективные средства для домашнего ухода.")
  heroImage   String?  @default("/seed/serum.jpg")
  footerText  String   @default("Интернет-магазин профессиональной косметики")
  phone       String?  @default("+7")
  email       String?  @default("sales@vita-services.com")
  updatedAt   DateTime @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  name      String
  text      String
  rating    Int      @default(5)
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ThemeSettings {
  id              String   @id @default("default")

  // Включение по расписанию (UTC)
  scheduleEnabled Boolean  @default(false)
  scheduleStart   DateTime?
  scheduleEnd     DateTime?

  // Фон сайта
  backgroundUrl   String   @default("")

  // Баннер
  bannerEnabled   Boolean  @default(false)
  bannerText      String   @default("")
  bannerHref      String?

  updatedAt       DateTime @updatedAt
}




